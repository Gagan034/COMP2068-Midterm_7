extends ../layouts/main.pug
block content
  .container
    header
      h1= title

    div
      table.table.table-striped
        thead
          tr
            th Title
            th
        
        tbody
          each ArcadeGame in ArcadeGames
            tr
              td
                a(href=`/ArcadeGame/${ArcadeGame.id}`)= ArcadeGame.title
              td
                a(href=`/ArcadeGame/${ArcadeGame.id}/edit`) edit
                = ` | `
                form.destroy(action=`/ArcadeGame/destroy`, method="POST", onsubmit='return confirm("Are you sure you wish to destroy this beautiful ArcadeGame?")')
                  input(type="hidden", name="id", value=`${ArcadeGame.id}`)
                  input.destroy(type="submit", value="destroy")
          
