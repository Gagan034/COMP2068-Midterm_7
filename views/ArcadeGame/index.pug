extends ../layouts/main.pug
block content
  .container
    header
      h1= title

    div
      table.table.table-striped
        thead
          tr
            th Title
            th Status
            th Actions
        
        tbody
          each ArcadeGame in ArcadeGame
            tr
              td
                a(href=`/ArcadeGame/${ArcadeGame.id}`)= ArcadeGame.title
              td= ArcadeGame.status
              td
                a(href=`/ArcadeGame/${ArcadeGame.id}/edit`) edit
                =" | "
                form.destroy(action="/ArcadeGame/destroy", method="POST", onsubmit='return confirm("Are you Sure?????");')
                  input(type="hidden", name="id", value=ArcadeGame.id)
                  input(type="submit", value="delete")

